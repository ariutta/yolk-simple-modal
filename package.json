{
  "name": "yolk-simple-modal",
  "version": "0.0.0",
  "description": "Yolk wrapper for wunderlink/simple-modal.",
  "main": "dist/bundle.es5.js",
  "jsnext:main": "index.js",
  "scripts": {
    "build": "browserify index.ts -p [ tsify ] --standalone YolkSimpleModal | derequire > dist/bundle.es5.js",
    "karma": "NODE_ENV=test karma start",
    "postinstall1": "browserify ./node_modules/simple-modal/index.js --standalone createSimpleModal | derequire > ./node_modules/simple-modal/simple-modal.compiled.js && mv ./node_modules/simple-modal/simple-modal.compiled.js ./node_modules/simple-modal/index.js",
    "postinstall": "npm run build",
    "start": "npm run start:immediate && npm run start:bridgedb && npm run start:async",
    "start:async": "budo test/e2e/async.js --live --open -- --plugin tsify",
    "start:bridgedb": "budo test/e2e/bridgedb.js --live --open -- --plugin tsify",
    "start:bridgedbcompiled": "budo test/e2e/bridgedb.compiled.js --live --open -- --plugin tsify",
    "start:immediate": "budo test/e2e/immediate.js --live --open -- --plugin tsify",
    "test": "mocha ./test/unit/api.js",
    "watch": "watch 'npm run test' index.ts test/unit/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ariutta/yolk-simple-modal.git"
  },
  "keywords": [
    "yolk",
    "modal",
    "lightbox",
    "light-box",
    "simple-modal"
  ],
  "author": "Anders Riutta",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/ariutta/yolk-simple-modal/issues"
  },
  "homepage": "https://github.com/ariutta/yolk-simple-modal",
  "dependencies": {
    "browserify": "^12.0.1",
    "coffeeify": "^2.0.1",
    "cssify": "^1.0.1",
    "derequire": "^2.0.3",
    "isvisible": "^1.0.6",
    "jade": "^1.11.0",
    "jade-runtime": "^2.0.0",
    "jadeify": "^4.5.0",
    "lodash": "^4.11.1",
    "rx": "^4.0.0",
    "simple-modal": "^1.0.1",
    "spin.js": "^2.0.2",
    "yolk": "^0.10.1"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "bridgedb": "^5.0.13",
    "budo": "^8.2.2",
    "chai": "^3.5.0",
    "chai-as-promised": "~4.1.1",
    "debug": "^2.2.0",
    "deglobalify": "^0.2.0",
    "jquery": "^1.11.3",
    "karma": "0.13.22",
    "karma-browserify": "^5.0.3",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "0.2.3",
    "karma-coverage": "0.5.5",
    "karma-firefox-launcher": "0.1.7",
    "karma-growl-reporter": "0.1.1",
    "karma-mocha": "0.2.2",
    "karma-mocha-reporter": "2.0.0",
    "mocha": "^2.3.4",
    "tsify": "^0.15.2",
    "typings": "^0.8.1",
    "watch": "^0.17.1",
    "watchify": "^3.0.0"
  }
}
